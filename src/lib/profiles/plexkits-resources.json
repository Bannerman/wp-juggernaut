    "field_layout": {
      "content": [
        {
          "key": "intro_text",
          "type": "textarea",
          "label": "Intro Text",
          "rows": 3,
          "placeholder": "Introduction paragraph..."
        },
        {
          "key": "text_content",
          "type": "textarea",
          "label": "Main Content Text",
          "rows": 6,
          "placeholder": "Main content..."
        },
        {
          "key": "text_additional",
          "label": "Text Additional",
          "type": "text",
          "width": "full"
        }
      ],
      "features": [
        {
          "key": "group_features",
          "type": "repeater",
          "label": "Feature List",
          "fields": {
            "feature_text": {
              "key": "feature_text",
              "type": "text",
              "label": "Feature",
              "placeholder": "Feature description..."
            }
          }
        }
      ],
      "timer": [
        {
          "key": "timer_enable",
          "type": "checkbox",
          "label": "Enable Timer"
        },
        {
          "key": "timer_title",
          "type": "text",
          "label": "Timer Title",
          "placeholder": "e.g., TOURNAMENT STARTS",
          "conditional": {
            "field": "timer_enable",
            "operator": "truthy"
          }
        },
        {
          "key": "timer_single_datetime",
          "type": "datetime",
          "label": "Timer Date/Time",
          "conditional": {
            "field": "timer_enable",
            "operator": "truthy"
          }
        }
      ],
      "downloads": [
        {
          "key": "download_sections",
          "type": "repeater",
          "label": "Download Sections",
          "fields": {
            "download_section_heading": {
              "key": "download_section_heading",
              "type": "text",
              "label": "Section Heading",
              "placeholder": "Section heading...",
              "default_value": "Download the {{title}}"
            },
            "download_version": {
              "key": "download_version",
              "type": "text",
              "label": "Version",
              "placeholder": "e.g., 1.0",
              "width": "half"
            },
            "download_section_color": {
              "key": "download_section_color",
              "type": "color",
              "label": "Section Color",
              "width": "quarter"
            },
            "download_archive": {
              "key": "download_archive",
              "type": "checkbox",
              "label": "Archive",
              "width": "quarter"
            },
            "download_links": {
              "key": "download_links",
              "type": "repeater",
              "label": "Download Links",
              "fields": {
                "download_file_format": {
                  "key": "download_file_format",
                  "type": "select",
                  "label": "File Format",
                  "width": "half",
                  "taxonomy_source": "file_format",
                  "triggers": [
                    {
                      "match_term_pattern": "google",
                      "set_field": "download_link_type",
                      "set_value": "link"
                    }
                  ]
                },
                "download_link_type": {
                  "key": "download_link_type",
                  "type": "select",
                  "label": "Link Type",
                  "width": "half",
                  "options": [
                    {
                      "value": "link",
                      "label": "External Link"
                    },
                    {
                      "value": "upload",
                      "label": "Upload File"
                    }
                  ]
                },
                "download_link_url": {
                  "key": "download_link_url",
                  "type": "url",
                  "label": "URL",
                  "conditional": {
                    "field": "download_link_type",
                    "value": "link"
                  }
                },
                "link_text": {
                  "key": "link_text",
                  "type": "text",
                  "label": "Link Text Override (Optional)",
                  "placeholder": "Link text...",
                  "width": "full"
                }
              }
            }
          }
        },
        {
          "key": "download_offset",
          "label": "Download Offset",
          "type": "number",
          "width": "full"
        }
      ],
      "changelog": [
        {
          "key": "group_changelog",
          "type": "repeater",
          "label": "Changelog",
          "fields": {
            "changelog_version": {
              "key": "changelog_version",
              "type": "text",
              "label": "Version",
              "placeholder": "v1.0",
              "width": "half"
            },
            "changelog_date": {
              "key": "changelog_date",
              "type": "date",
              "label": "Date",
              "width": "half"
            },
            "changelog_notes": {
              "key": "changelog_notes",
              "type": "textarea-list",
              "label": "Notes",
              "rows": 3,
              "separator": "\n",
              "placeholder": "Notes (one per line)..."
            }
          }
        }
      ],
      "faq": [
        {
          "key": "faq_group",
          "type": "repeater",
          "label": "FAQ Items",
          "fields": {
            "question": {
              "key": "question",
              "type": "text",
              "label": "Question",
              "placeholder": "e.g. How do I use this template?"
            },
            "answer": {
              "key": "answer",
              "type": "textarea",
              "label": "Answer",
              "rows": 6
            }
          }
        }
      ],
      "hero": [
        {
          "key": "device_image_full",
          "label": "Device Image Full",
          "type": "text",
          "width": "full"
        },
        {
          "key": "device_image_crop",
          "label": "Device Image Crop",
          "type": "text",
          "width": "full"
        },
        {
          "key": "header_image",
          "label": "Header Image",
          "type": "text",
          "width": "full"
        },
        {
          "key": "youtube_url",
          "label": "Youtube Url",
          "type": "text",
          "width": "full"
        }
      ]
    },
    "branding": {
      "app_name": "PLEXKITS Manager",
      "primary_color": "#6366f1"
    },
    "features": {
      "ai_fill": true,
      "prompt_templates": true,
      "bulk_edit": true,
      "diagnostics": true

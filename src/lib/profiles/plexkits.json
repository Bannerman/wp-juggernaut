{
  "profile_id": "plexkits-resources",
  "profile_name": "PLEXKITS Resources",
  "profile_version": "1.0.0",
  "juggernaut_version": ">=1.0.0",
  "sites": [
    {
      "id": "local",
      "name": "Local Development",
      "url": "http://plexkits-v4.local",
      "description": "Local WordPress development environment"
    },
    {
      "id": "staging",
      "name": "PLEXKITS Staging",
      "url": "https://staging.plexkits.com",
      "description": "Staging environment for testing"
    },
    {
      "id": "production",
      "name": "PLEXKITS Production",
      "url": "https://plexkits.com",
      "description": "Live production site",
      "is_default": true
    }
  ],
  "required_plugins": [
    {
      "id": "metabox",
      "version": ">=1.0.0",
      "source": "bundled",
      "auto_enable": true
    },
    {
      "id": "seopress",
      "version": ">=1.0.0",
      "source": "bundled",
      "auto_enable": true
    }
  ],
  "post_types": [
    {
      "slug": "resource",
      "name": "Resources",
      "rest_base": "resource",
      "icon": "FileText",
      "supports": [
        "title",
        "editor",
        "thumbnail",
        "custom-fields"
      ],
      "is_primary": true
    },
    {
      "slug": "post",
      "name": "Posts",
      "rest_base": "posts",
      "icon": "Newspaper",
      "supports": [
        "title",
        "editor",
        "thumbnail",
        "custom-fields"
      ],
      "is_primary": false
    }
  ],
  "taxonomies": [
    {
      "slug": "resource-type",
      "name": "Resource Type",
      "rest_base": "resource-type",
      "post_types": [
        "resource"
      ],
      "hierarchical": false,
      "show_in_filter": true,
      "filter_position": 1,
      "show_in_table": true,
      "table_position": 1,
      "meta_field": "tax_resource_type",
      "editable": true
    },
    {
      "slug": "topic",
      "name": "Topic",
      "rest_base": "topic",
      "post_types": [
        "resource"
      ],
      "hierarchical": true,
      "show_in_filter": true,
      "filter_position": 2,
      "show_in_table": true,
      "table_position": 2,
      "table_max_display": 3,
      "meta_field": "tax_topic",
      "editable": true
    },
    {
      "slug": "intent",
      "name": "Intent",
      "rest_base": "intent",
      "post_types": [
        "resource"
      ],
      "hierarchical": false,
      "show_in_filter": true,
      "filter_position": 3,
      "meta_field": "tax_intent",
      "editable": true
    },
    {
      "slug": "audience",
      "name": "Audience",
      "rest_base": "audience",
      "post_types": [
        "resource"
      ],
      "hierarchical": false,
      "show_in_filter": true,
      "filter_position": 4,
      "meta_field": "tax_audience",
      "editable": true
    },
    {
      "slug": "leagues",
      "name": "League",
      "rest_base": "leagues",
      "post_types": [
        "resource"
      ],
      "hierarchical": false,
      "show_in_filter": true,
      "filter_position": 5,
      "meta_field": "tax_league",
      "editable": false,
      "conditional": {
        "show_when": {
          "taxonomy": "topic",
          "has_term_id": 432
        }
      }
    },
    {
      "slug": "bracket-size",
      "name": "Bracket Size",
      "rest_base": "bracket-size",
      "post_types": [
        "resource"
      ],
      "hierarchical": false,
      "show_in_filter": true,
      "filter_position": 6,
      "meta_field": "tax_bracket_size",
      "editable": false,
      "conditional": {
        "show_when": {
          "taxonomy": "resource-type",
          "has_term_id": 417
        }
      }
    },
    {
      "slug": "competition_format",
      "name": "Competition Format",
      "rest_base": "competition_format",
      "post_types": [
        "resource"
      ],
      "hierarchical": false,
      "show_in_filter": true,
      "filter_position": 7,
      "meta_field": "taax_competition_format",
      "editable": false,
      "conditional": {
        "show_when": {
          "taxonomy": "topic",
          "has_term_id": 432
        }
      }
    },
    {
      "slug": "file_format",
      "name": "File Format",
      "rest_base": "file_format",
      "post_types": [
        "resource"
      ],
      "hierarchical": false,
      "show_in_filter": false,
      "editable": false
    },
    {
      "slug": "category",
      "name": "Category",
      "rest_base": "categories",
      "post_types": [
        "post"
      ],
      "hierarchical": true,
      "show_in_filter": true,
      "filter_position": 1,
      "show_in_table": true,
      "table_position": 1,
      "editable": true
    },
    {
      "slug": "post_tag",
      "name": "Tag",
      "rest_base": "tags",
      "post_types": [
        "post"
      ],
      "hierarchical": false,
      "show_in_filter": true,
      "filter_position": 2,
      "show_in_table": true,
      "table_position": 2,
      "table_max_display": 3,
      "editable": true
    }
  ],
  "plugin_settings": {
    "metabox": {
      "auto_sync_meta": true
    },
    "seopress": {
      "auto_sync_seo": true,
      "default_robots": {
        "noindex": false,
        "nofollow": false
      }
    }
  },
  "ui": {
    "tabs": [
      {
        "id": "basic",
        "label": "Basic",
        "source": "core",
        "position": 1
      },
      {
        "id": "seo",
        "label": "SEO",
        "source": "seopress",
        "position": 2
      },
      {
        "id": "content",
        "label": "Content",
        "source": "metabox",
        "position": 3,
        "dynamic": true,
        "post_types": ["resource"]
      },
      {
        "id": "features",
        "label": "Features",
        "source": "metabox",
        "position": 4,
        "dynamic": true,
        "post_types": ["resource"]
      },
      {
        "id": "classification",
        "label": "Classification",
        "source": "core",
        "position": 5
      },
      {
        "id": "timer",
        "label": "Timer",
        "source": "metabox",
        "position": 6,
        "dynamic": true,
        "post_types": ["resource"]
      },
      {
        "id": "downloads",
        "label": "Downloads",
        "source": "metabox",
        "position": 7,
        "dynamic": true,
        "post_types": ["resource"]
      },
      {
        "id": "changelog",
        "label": "Changelog",
        "source": "metabox",
        "position": 8,
        "dynamic": true,
        "post_types": ["resource"]
      },
      {
        "id": "ai",
        "label": "AI Fill",
        "source": "core",
        "icon": "sparkles",
        "position": 9
      }
    ],
    "field_layout": {
      "content": [
        {
          "key": "intro_text",
          "type": "textarea",
          "label": "Intro Text",
          "rows": 3,
          "placeholder": "Introduction paragraph..."
        },
        {
          "key": "text_content",
          "type": "textarea",
          "label": "Main Content Text",
          "rows": 6,
          "placeholder": "Main content..."
        },
        {
          "key": "text_",
          "type": "textarea",
          "label": "Additional Content",
          "rows": 4,
          "placeholder": "Additional content block..."
        }
      ],
      "features": [
        {
          "key": "group_features",
          "type": "repeater",
          "label": "Feature List",
          "fields": {
            "feature_text": {
              "key": "feature_text",
              "type": "text",
              "label": "Feature",
              "placeholder": "Feature description..."
            }
          }
        }
      ],
      "timer": [
        {
          "key": "timer_enable",
          "type": "checkbox",
          "label": "Enable Timer"
        },
        {
          "key": "timer_title",
          "type": "text",
          "label": "Timer Title",
          "placeholder": "e.g., TOURNAMENT STARTS",
          "conditional": {
            "field": "timer_enable",
            "operator": "truthy"
          }
        },
        {
          "key": "timer_single_datetime",
          "type": "datetime",
          "label": "Timer Date/Time",
          "conditional": {
            "field": "timer_enable",
            "operator": "truthy"
          }
        }
      ],
      "downloads": [
        {
          "key": "download_sections",
          "type": "repeater",
          "label": "Download Sections",
          "fields": {
            "download_section_heading": {
              "key": "download_section_heading",
              "type": "text",
              "label": "Section Heading",
              "placeholder": "Section heading..."
            },
            "download_section_color": {
              "key": "download_section_color",
              "type": "color",
              "label": "Section Color"
            },
            "download_archive": {
              "key": "download_archive",
              "type": "checkbox",
              "label": "Archive Section"
            },
            "download_links": {
              "key": "download_links",
              "type": "repeater",
              "label": "Download Links",
              "fields": {
                "link_text": {
                  "key": "link_text",
                  "type": "text",
                  "label": "Link Text",
                  "placeholder": "Link text..."
                },
                "download_file_format": {
                  "key": "download_file_format",
                  "type": "select",
                  "label": "File Format",
                  "width": "half",
                  "taxonomy_source": "file_format",
                  "triggers": [
                    {
                      "match_term_pattern": "google",
                      "set_field": "download_link_type",
                      "set_value": "link"
                    }
                  ]
                },
                "download_link_type": {
                  "key": "download_link_type",
                  "type": "select",
                  "label": "Link Type",
                  "width": "half",
                  "options": [
                    {
                      "value": "link",
                      "label": "External Link"
                    },
                    {
                      "value": "upload",
                      "label": "Upload File"
                    }
                  ]
                },
                "download_link_url": {
                  "key": "download_link_url",
                  "type": "url",
                  "label": "URL",
                  "conditional": {
                    "field": "download_link_type",
                    "value": "link"
                  }
                }
              }
            }
          }
        }
      ],
      "changelog": [
        {
          "key": "group_changelog",
          "type": "repeater",
          "label": "Changelog",
          "fields": {
            "changelog_version": {
              "key": "changelog_version",
              "type": "text",
              "label": "Version",
              "placeholder": "v1.0",
              "width": "half"
            },
            "changelog_date": {
              "key": "changelog_date",
              "type": "date",
              "label": "Date",
              "width": "half"
            },
            "changelog_notes": {
              "key": "changelog_notes",
              "type": "textarea-list",
              "label": "Notes",
              "rows": 3,
              "separator": "\n",
              "placeholder": "Notes (one per line)..."
            }
          }
        }
      ]
    },
    "branding": {
      "app_name": "PLEXKITS Manager",
      "primary_color": "#6366f1"
    },
    "features": {
      "ai_fill": true,
      "prompt_templates": true,
      "bulk_edit": true,
      "diagnostics": true
    }
  },
  "field_mappings": {
    "resource->post": [
      {
        "source": {
          "key": "title",
          "category": "core"
        },
        "target": {
          "key": "title",
          "category": "core"
        }
      },
      {
        "source": {
          "key": "text_content",
          "category": "meta"
        },
        "target": {
          "key": "content",
          "category": "core"
        }
      }
    ],
    "post->resource": []
  }
}

{
  "name": "juggernaut",
  "version": "0.9.8",
  "description": "Juggernaut - A modular WordPress content management platform with plugin support",
  "private": true,
  "main": "electron/dist/main.js",
  "author": {
    "name": "Bannerman",
    "email": "rickbannerman@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bannerman/wp-juggernaut.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run build:standalone",
    "build:standalone": "cp -r .next/static .next/standalone/.next/static && ([ -d public ] && cp -r public .next/standalone/public || true)",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:init": "node scripts/init-db.js",
    "electron:dev": "npm run build:electron && NODE_ENV=development electron .",
    "electron:build": "npm run build && npm run rebuild:electron && npm run build:electron && electron-builder",
    "electron:build:mac": "npm run build && npm run rebuild:electron && npm run build:electron && electron-builder --mac",
    "electron:build:win": "npm run build && npm run rebuild:electron && npm run build:electron && electron-builder --win",
    "electron:build:linux": "npm run build && npm run rebuild:electron && npm run build:electron && electron-builder --linux",
    "electron:publish": "npm run build && npm run rebuild:electron && npm run build:electron && electron-builder --mac --publish always",
    "build:electron": "tsc -p electron/tsconfig.json",
    "rebuild:electron": "electron-builder install-app-deps",
    "postinstall": ""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-table": "^8.17.0",
    "better-sqlite3": "^11.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "electron-updater": "^6.2.0",
    "lucide-react": "^0.400.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.0"
  },
  "build": {
    "extends": "electron-builder.yml"
  }
}
